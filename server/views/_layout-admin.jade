doctype html

block vars

- var page = pageClass || ''
- var title = pageTitle || ''

html(lang=getLocale())
  head
    title= __('layout.title')
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(name="Title", content=__('layout.title'))
    meta(name="description", content=__('layout.description'))
    meta(name="keywords", content="emailing responsive, éditeur email, editeur emailing, éditeur template email, éditeur newsletter")
    meta(name="author", content="VOXmail")
    meta(name="application-name", content="Badsender Email Builder")
    meta(property="og:title", content="Badsender Email Builder")
    meta(property="og:image", content="http://agence.badsender.com/wp-content/uploads/2014/09/logo_badsender_154x118.png")
    meta(property="og:description", content="Editeur graphique de templates email par Badsender")
    meta(property="og:url", content="http://agence.badsender.com")
    meta(property="og:type", content="website")

    link(rel="canonical", href="http://agence.badsender.com")
    link(rel="shortcut icon", href="/favicon.png", type="image/png")
    link(rel="icon", href="/favicon.png", type="image/png")

    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css")
    //- link(rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css")
    link(rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-blue.min.css")
    //- link(rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-light_blue.min.css")

    script(defer src="https://code.getmdl.io/1.1.3/material.min.js")

    style.
      .page-content {
        margin: 0 auto;
        max-width: 1280px;
        padding-top: 2em;
      }
      .wireframe-new-edit .page-content {
        max-width: none;
        padding-top: 0;
      }
      .wireframe-new-edit .page-content > .mdl-grid {
        min-height: calc(100vh - 64px)
      }
      .mdl-data-table {
        width: 100%;
      }
      .mdl-textfield {
        width: auto;
      }
      .mdl-button--fab:not(.mdl-button--mini-fab) {
        position: fixed;
        bottom: .5em;
        right: .5em;
        z-index: 10;
      }
      .mdl-button--mini-fab {
        position: absolute;
        right: 0;
        bottom: 0;
        transform: translate(-50%, -50%);
      }
      .mdl-card .mdl-data-table {
        border-left: 0;
        border-right: 0;
      }
      .center-content {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .center-content .mdl-card {
        width: 400px;
      }
      .mdl-textfield {
        display: block;
      }
      .mdl-textfield__label--fixed {
        color: rgb(255,152,0);
        font-size: 12px;
        top: 4px;
        visibility: visible;
      }
      .mdl-card {
        min-height: 0;
      }
      details pre {
        font-size: 12px;
        overflow-x: auto;
      }
      .lang {
        position: absolute;
        top: .25em;
        right: .5em;
      }
      .lang a {
        color: #000;
        text-decoration: none;
      }

  if _user.id

    body.mdl-color--grey-100.mdl-color-text--grey-700(class=page)
      .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
        header.mdl-layout__header
          .mdl-layout__header-row
            //- Title
            span.mdl-layout-title= title
            //- Add spacer, to align navigation to the right
            .mdl-layout-spacer
            //- Navigation. We hide it in small screens
            nav.mdl-navigation.mdl-layout--large-screen-only
              if _user.isAdmin
                a.mdl-navigation__link(href="/admin") users
                a.mdl-navigation__link(href="/wireframes") wireframes

              a.mdl-navigation__link(href="/"): i.material-icons home
              a.mdl-navigation__link(href="/logout"): i.material-icons power_settings_new

        .mdl-layout__drawer
          span.mdl-layout-title= title
          nav.mdl-navigation
            if _user.isAdmin
              a.mdl-navigation__link(href="/admin") users
              a.mdl-navigation__link(href="/wireframes") wireframes
            a.mdl-navigation__link(href="/logout") logout
            a.mdl-navigation__link(href="/") home

        main.mdl-layout__content
          .page-content
            block content
            if _config.debug
              footer(style="background: #eee")
                pre= JSON.stringify(data, null, '  ')
                pre= _debug
  else
    body.mdl-color--primary.mdl-color-text--grey-700.center-content
      main
        .lang
          if getLocale() === 'en'
            a(href=_path + "?lang=fr") version française
          else
            a(href=_path + "?lang=en") english version

        block content
          if _config.debug
            footer(style="background: #eee")
              pre= JSON.stringify(data, null, '  ')
              pre= _debug

